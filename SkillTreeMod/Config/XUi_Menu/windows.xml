<?xml version="1.0" encoding="utf-8"?>

<append xpath="/windows">
    <window name="SkillTreeWindow"
            width="800"
            height="600"
            anchor="CenterCenter"
            visible="false"
            pause_game="false"
            cursor_locked="false"
            background_color="[black]"
            background_alpha="0.8"
            allow_close="true">

        <!-- HEADER BAR -->
        <panel name="header"
               pos="0,0"
               height="60"
               depth="1"
               background_color="[darkGrey]"
               bordercolor="[black]"
               borderthickness="3">

            <label name="title"
                   pos="10,-6"
                   width="700"
                   height="40"
                   font_size="32"
                   text="Skill Tree"
                   color="[white]"
                   valign="Center"
                   justify="Left" />

            <button name="btnClose"
                    width="40"
                    height="40"
                    pos="750,-10"
                    pivot="TopLeft"
                    background_color="[red]"
                    text="X"
                    font_size="24"
                    on_press="close" />
        </panel>

        <!-- LEFT COLUMN: LIST OF SKILLS -->
        <panel name="skillsListPanel"
               pos="0,-70"
               width="300"
               height="500"
               background_color="[darkGrey]"
               bordercolor="[black]"
               borderthickness="2">

            <label name="skillsHeader"
                   pos="10,-10"
                   width="280"
                   height="30"
                   font_size="20"
                   text="Skills"
                   color="[white]"
                   valign="Center"
                   justify="Left" />

            <!-- TODO: later we'll replace this with Quartz list widget -->
            <label name="skill1"
                   pos="10,-50"
                   width="280"
                   height="30"
                   font_size="16"
                   text="Strength / Lv 3"
                   color="[white]" />

            <label name="skill2"
                   pos="10,-80"
                   width="280"
                   height="30"
                   font_size="16"
                   text="Agility / Lv 2"
                   color="[white]" />
        </panel>

        <!-- RIGHT COLUMN: DETAILS -->
        <panel name="detailsPanel"
               pos="320,-70"
               width="460"
               height="500"
               background_color="[darkGrey]"
               bordercolor="[black]"
               borderthickness="2">

            <label name="detailName"
                   pos="10,-10"
                   width="440"
                   height="40"
                   font_size="24"
                   text="Select a skill"
                   color="[white]"
                   valign="TopLeft"
                   justify="Left" />

            <label name="detailDesc"
                   pos="10,-60"
                   width="440"
                   height="200"
                   font_size="16"
                   text="Description will go here."
                   color="[white]"
                   justify="Left"
                   wrap="true" />

            <button name="btnLevelUp"
                    pos="10,-280"
                    width="200"
                    height="40"
                    background_color="[green]"
                    text="Spend Point"
                    font_size="20" />
        </panel>

    </window>
</append>
