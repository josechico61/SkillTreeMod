<configs>
		<set xpath="//ruleset/@scale">1.0</set>	
		
<remove xpath="/xui/ruleset[@name='default']/window_group[@name='compass']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="compass" actionSet="false">
<window name="windowCompass"/>
<window name="windowEntering" anchor="CenterTop"/>
<window name="windowTargetBar" anchor="CenterTop"/>
<window name="onScreenIcons"/>
<window name="HUDPopoutList" anchor="LeftBottom"/>
</window_group>
</append>

<set xpath="/xui/ruleset/@name">default</set>
<set xpath="/xui/ruleset[@name='default']/@ignore_missing_class">false</set>

<remove xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="toolbelt" actionSet="false">
<window name="windowToolbelt" anchor="CenterBottom"/>
<window name="windowGroupBars" anchor="LeftCenter"/>
<window name="windowXpBar"/>
<window name="HUDRightStatBars" anchor="RightBottom"/>
<window name="windowQuestTracker" anchor="RightTop"/>
<window name="windowRecipeTracker" anchor="RightTop"/>
<window name="HUDLeftStatBars" anchor="LeftBottom"/>
</window_group>
</append>

<remove xpath="/xui/ruleset/window_group[@name='looting']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="looting" left_panel_valign_top="false" controller="XUiC_LootWindowGroup" close_compass_on_open="true">
<window name="windowLooting"/>
<window name="windowNonPagingHeader"/>
</window_group>
</append>

<remove xpath="/xui/ruleset/window_group[@name='vehicle']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="vehicle" controller="XUiC_VehicleWindowGroup" open_backpack_on_open="true" close_compass_on_open="true" defaultSelected="content">
<window name="windowVehicle"/>
<window name="windowNonPagingHeader"/>
<window name="windowToolbelt" anchor="CenterBottom"/>
</window_group>
</append>

<remove xpath="/xui/ruleset[@name='default']/window_group[@name='ingameMenu']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="ingameMenu" close_compass_on_open="true">
<window name="ingameMenu"/>
</window_group>
</append>

<remove xpath="/xui/ruleset[@name='default']/window_group[@name='crafting']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="crafting" controller="XUiC_CraftingWindowGroup" open_backpack_on_open="true" defaultSelected="bp.content">
<window name="rightWindowCraftingList"/>
<window name="rightwindowCraftingQueue"/>
<window name="craftingInfoPanel"/>
<window name="CharacterFrameWindow"/>
<window name="buffInfoPanel"/>
<window name="ActiveBuffsWindow"/>
</window_group>
</append>

<remove xpath="/xui/ruleset[@name='default']/window_group[@name='backpack']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="backpack" actionSet="false">
<window name="itemInfoPanel"/>
<window name="emptyInfoPanel"/>
<window name="windowBackpack"/>
</window_group>
</append>
<setattribute xpath="/xui//window_group[@name='looting']" name="left_panel_valign_top">false</setattribute>
<setattribute xpath="/xui//window_group[@name='looting']" name="controller">XUiC_LootWindowGroup</setattribute>
<setattribute xpath="/xui//window_group[@name='looting']" name="close_compass_on_open">true</setattribute>
<remove xpath="/xui/ruleset[@name='default']/window_group[@name='map']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="map" defaultSelected="mapView">
<window name="mapTrackingPopup"/>
<window name="mapAreaSetWaypoint"/>
<window name="mapAreaChooseWaypoint"/>
<window name="mapAreaEnterWaypointName"/>
<window name="mapArea"/>
<window name="mapTracking"/>
<window name="mapInvites"/>
</window_group>
</append>
<setattribute xpath="/xui//window_group[@name='vehicleStorage']" name="controller">XUiC_VehicleStorageWindowGroup</setattribute>
<setattribute xpath="/xui//window_group[@name='vehicleStorage']" name="open_backpack_on_open">true</setattribute>
<setattribute xpath="/xui//window_group[@name='vehicleStorage']" name="close_compass_on_open">true</setattribute>
<remove xpath="/xui/ruleset[@name='default']/window_group[@name='workstation_forge']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="workstation_forge" controller="XUiC_WorkstationWindowGroup" open_backpack_on_open="true" close_compass_on_open="true" defaultSelected="bp.content">
<window name="windowCraftingList"/>
<window name="craftingInfoPanel"/>
<window name="windowCraftingQueue"/>
<window name="windowToolsForge"/>
<window name="windowFuel"/>
<window name="windowForgeInput"/>
<window name="windowOutput"/>
<window name="windowNonPagingHeader"/>
</window_group>
</append>























