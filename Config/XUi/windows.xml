<configs>
	<append xpath="/windows">
    <window name="SkillTreeMenuBg"
            anchor="CenterCenter" pos="0,0"
            width="1920" height="1080"
            depth="6"
            clipwindow="true"
            cursor_area="true"
            disableautobackground="true">

        <rect 
			name="overlay" 
			pos="0,0" 
			width="100%" 
			height="100%" 
			pivot="center">
        <filledsprite 
			name="black_bg"
			depth="6"
			pos="0,0" width="100%" height="100%"
			type="filled" fill="1"
			color="0,0,0,255"
			pivot="center"/>

        <rect 
			name="Backgrounds" 
			pos="0,0" 
			depth="6">
			<sprite 
			name="testBG" 
			sprite="skilltreeOLD_bg"
			type="sliced" 
			globalopacitymod="1.6" 
			pivot="center"/>
        </rect>

        <label 
			name="center_text"
			depth="7"
			pos="0,0" width="100%" height="100%"
			pivot="center"
			justify="center"
			font_size="48"
			color="[white]"
			text="Noble I finally did it! Heck yeah! 8====D"/>

        <!-- Close button (top-right of the window area) -->
        <button 
			name="btnClose"
			on_press="true"
			controller="XUiC_SkillTreeCloseButton, SkillTreeMod"
			depth = "7"
			pos="880,480" 
			width="44" 
			height="44"
			sprite="skilltree_close_x"
			pivot= "center"
			hovercolor="[red]"
			hoverscale="1.1"
			sound="[recipe_click]"
			sound_play_on_hover="[default_hover]"
			style="press,hover"/>
			
      </rect>
    </window>
  </append>
  <set xpath="/windows/window[@name='windowPagingHeader']//button[@name='Skills']/@name">SkillTreeMenu</set>
</configs>
