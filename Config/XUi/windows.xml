<configs>
  <!-- SkillTree modal window (layout only) -->
  <append xpath="/windows">
    <window name="SkillTreeMenuWindow" anchor="LeftTop">
      <!-- Center the content with a child rect (no width/height on <window>) -->
      <rect name="skilltree_root" anchor="Center" pos="0,0" width="400" height="250">
        <!-- Red background panel -->
        <sprite depth="0" name="background" color="0,0,0,255" type="sliced" />

        <!-- Title text -->
        <label depth="1" name="title"
               pos="12,12" width="300" height="28"
               color="0,0,0,255"
               text="SkillTreeMenu" />

        <!-- Visual X in top-right (no functionality yet) -->
        <label depth="2" name="close_x"
               pos="370,12" width="18" height="18"
               color="0,0,0,255"
               text="X" />
      </rect>
    </window>

    <!-- Small HUD button to open the menu -->
    <window name="HUDSkillTreeButton" anchor="LeftBottom">
      <rect name="hud" pos="9,180" rows="1" cols="1" width="120" side="right">
        <rect width="120" height="36">
          <sprite depth="1" name="border" color="0,0,0,150" height="36" type="sliced" />
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced" />
          <button depth="3" name="btnOpenSkillTree" pos="0,0" width="120" height="36"
                  text="Skill Tree" style="press, hover" on_press="openwindow,skilltree" />
        </rect>
      </rect>
    </window>
  </append>
</configs>
